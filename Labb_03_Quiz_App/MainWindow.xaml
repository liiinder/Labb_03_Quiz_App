<Window x:Class="Labb_03_Quiz_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb_03_Quiz_App"
        xmlns:controls="clr-namespace:Labb_03_Quiz_App.View.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Window.InputBindings>
        <KeyBinding Key="I" Modifiers="Ctrl"  Command="{Binding ConfigViewModel.AddQuestionCommand}" />
    </Window.InputBindings>
        <!--<KeyBinding Key="Insert" Modifiers="Ctrl" Command="{Binding ConfigViewModel.AddQuestionCommand}" />-->
    <Grid>
        <StackPanel>
            <controls:MenuView />
            <controls:ConfigView />
            <!--<controls:GameView />-->
        </StackPanel>
    </Grid>
</Window>

